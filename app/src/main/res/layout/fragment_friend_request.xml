<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/no_friend_requests_tv"
        android:visibility="invisible"
        android:text="@string/you_have_no_friend_requests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/back_to_friends_list_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_friend_request"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_to_friends_list_button" />

    <Button
        android:id="@+id/back_to_friends_list_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/friends_list"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>